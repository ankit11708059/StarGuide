<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ankit626.startup.StatesActivity">
    <TextView
        android:background="#FBC02D"
        android:layout_marginTop="2dp"
        android:textColor="#F44336"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Where you want to go"
        android:textSize="17dp"
        android:layout_marginLeft="90dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
<RelativeLayout
    android:padding="10dp"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="40dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
  <ImageView
      android:id="@+id/raj"
      android:layout_alignParentLeft="true"
      android:background="@drawable/raj"
      android:layout_width="140dp"
      android:layout_height="140dp"/>
    <TextView
        android:background="#FBC02D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rajasthan"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_marginLeft="30dp"
        android:layout_alignBottom="@+id/raj"/>

    <ImageView
        android:id="@+id/delhi"
        android:layout_alignParentRight="true"
        android:background="@drawable/delhi"
        android:layout_width="140dp"
        android:layout_height="140dp"/>
    <TextView
        android:background="#FBC02D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delhi"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_marginLeft="220dp"
        android:layout_alignBottom="@+id/delhi"/>
    <ImageView
        android:id="@+id/hp"
        android:layout_marginTop="170dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/hp"
        android:layout_width="140dp"
        android:layout_height="140dp"/>
    <TextView
        android:layout_marginLeft="30dp"
        android:background="#FBC02D"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/hp"
        android:text="Himachal Pradesh"/>

    <ImageView
        android:id="@+id/bihar"
        android:layout_marginTop="170dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/bihar"
        android:layout_width="140dp"
        android:layout_height="140dp"/>
    <TextView
        android:background="#FBC02D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bihar"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_marginLeft="220dp"
        android:layout_alignBottom="@+id/bihar"/>
    <ImageView
        android:id="@+id/tamil"
        android:layout_marginTop="340dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/tamil"
        android:layout_width="140dp"
        android:layout_height="140dp"/>
    <TextView
        android:layout_marginLeft="30dp"
        android:background="#FBC02D"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tamil"
        android:text="Tamil Nadu"/>
    <ImageView
        android:id="@+id/mumb"
        android:layout_marginTop="340dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/mumb"
        android:layout_width="140dp"
        android:layout_height="140dp"/>
    <TextView
        android:background="#FBC02D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maharastra"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_marginLeft="220dp"
        android:layout_alignBottom="@+id/mumb"/>
  <ImageView
      android:id="@+id/beng"
      android:layout_marginTop="510dp"
      android:layout_alignParentRight="true"
      android:background="@drawable/beng"
      android:layout_width="140dp"
      android:layout_height="140dp"/>
    <TextView
        android:background="#FBC02D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="West Bengal"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_marginLeft="220dp"
        android:layout_alignBottom="@+id/beng"/>
    <ImageView
        android:id="@+id/utra"
        android:layout_marginTop="510dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/utra"
        android:layout_width="140dp"
        android:layout_height="140dp"/>
    <TextView
        android:layout_marginLeft="30dp"
        android:background="#FBC02D"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/utra"
        android:text="UtraKhand"/>
</RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>

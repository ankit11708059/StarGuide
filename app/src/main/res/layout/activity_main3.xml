<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#18FFFF"
    android:padding="20dp"
    tools:context="com.ankit626.startup.Main3Activity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="50dp"
        android:src="@drawable/gy" />
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_bar"
        android:layout_marginLeft="120dp"/>
    <TextView
        android:background=" #a3e4d7
"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textSize="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter email"
        android:id="@+id/editEmail"
        android:textSize="25dp"/>
    <EditText
        style="@style/FirebaseUI.EditText.PasswordField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:id="@+id/editPass"
        android:textSize="25dp"/>

    <Button
        android:background="#a3e4d7"
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"/>

    <TextView
        android:background="#a3e4d7"
        android:textColor="#000"
        android:id="@+id/ghj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Already have and account"
        android:textSize="20dp"
        android:layout_marginTop="20dp"/>

</LinearLayout>
